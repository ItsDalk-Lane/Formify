{
  "permissions": {
    "allow": [
      "Bash(npm run build)"
    ],
    "defaultMode": "acceptEdits",
    "deny": [],
    "ask": []
  },
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true,
    "example-skills@anthropic-agent-skills": true
  },
  "env": {
    "CLAUDE_FORCE_SKILLS": "Prompt-Engineering-Expert-Skill",
    "CLAUDE_SKILL_AUTO_LOAD": "true"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "agent",
            "prompt": "使用Prompt-Engineering-Expert-Skill分析本次会话的目标，并准备提供专家级的提示工程建议。优先调用技能：Skill(\"Prompt-Engineering-Expert-Skill\")",
            "model": "claude-sonnet-4-5-20250929",
            "statusMessage": "初始化提示工程专家..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "在处理用户请求前，首先调用Prompt-Engineering-Expert-Skill进行深度分析和优化。应用提示工程最佳实践来提升响应质量。",
            "statusMessage": "应用提示工程专家分析..."
          }
        ]
      }
    ]
  }
}
