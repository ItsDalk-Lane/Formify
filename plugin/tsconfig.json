{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2018",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "paths": {
      "tars/*": [
        "src/features/tars/*"
      ]
    },
    "lib": [
      "DOM",
      "ES2018"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ]
}